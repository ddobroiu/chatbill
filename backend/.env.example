
PORT=3000

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@host:port/database

# IAPP API (Integrare facturare)
IAPP_API_USERNAME=your-iapp-username
IAPP_API_PASSWORD=your-iapp-password
IAPP_API_URL=https://api.my.iapp.ro
IAPP_EMAIL_RESPONSABIL=your-email@example.com

# ANAF e-Factura OAuth2
# Obține credențiale de la: https://logincert.anaf.ro
ANAF_CLIENT_ID=your-anaf-client-id
ANAF_CLIENT_SECRET=your-anaf-client-secret
ANAF_REDIRECT_URI=https://your-domain.com/api/anaf/callback
ANAF_AUTH_URL=https://logincert.anaf.ro/anaf-oauth2/v1/authorize
ANAF_TOKEN_URL=https://logincert.anaf.ro/anaf-oauth2/v1/token
ANAF_REVOKE_URL=https://logincert.anaf.ro/anaf-oauth2/v1/revoke

# Session Secret pentru OAuth state protection
# Generează cu: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-session-secret-here-use-crypto-randomBytes-64

# JWT Secret pentru autentificare utilizatori
# Generează cu: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-here-use-crypto-randomBytes-64

# Base URL pentru link-uri în facturi
BASE_URL=https://your-domain.com

# Frontend URL pentru CORS
FRONTEND_URL=https://your-domain.com

# OpenAI API Key pentru Chat GPT
# Obține de la: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Email Configuration (Resend)
# Obține API key de la: https://resend.com
EMAIL_FROM=contact@your-domain.com
ADMIN_EMAIL=admin@your-domain.com
SUPPORT_EMAIL=support@your-domain.com
RESEND_API_KEY=re_your-resend-api-key-here

# WhatsApp Integration (Opțional)
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token
WHATSAPP_API_VERSION=v24.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
META_API_TOKEN=your-meta-api-token
META_APP_SECRET=your-meta-app-secret
META_VERIFY_TOKEN=your-verify-token


# === STRIPE CONFIGURATION ===
# Get your keys from: https://dashboard.stripe.com/apikeys
# Use test keys (pk_test_... and sk_test_...) for development
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_MONTHLY=price_monthly_id_here
STRIPE_PRICE_ANNUAL=price_annual_id_here

# Stripe redirect URLs
STRIPE_SUCCESS_URL=http://localhost:3000/#subscription-success
STRIPE_CANCEL_URL=http://localhost:3000/#subscription